    crossorigin="anonymous"></script>

<script>
    let consultbtn = document.getElementById("sbtn");
    consultbtn.addEventListener("click", scrollbar);

    function scrollbar() {
        const section = document.getElementById('consultsection');

        window.scrollTo({
            top: section.offsetTop,
            left: 0,
            behavior: 'smooth'
        });
    }

    let callbackbtn = document.getElementById("callbackbtn");
    callbackbtn.addEventListener("click", scrolltocallback);

    function scrolltocallback() {
        const sectioncall = document.getElementById('callbacksection');

        window.scrollTo({
            top: sectioncall.offsetTop,
            left: 0,
            behavior: 'smooth'
        });
    }

</script>


